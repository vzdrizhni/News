<div class="post-wrapper">
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
  </div>
</div>
<% if current_user %>
<div class="new-article">
  <%= link_to "СОЗДАТЬ НОВУЮ СТАТЬЮ", new_post_path, class: "project-link" %>
</div>
<% else %>
  <div class="new-article">
    <%= link_to "Залогиньтесь чтобы сщздать статью", new_session_path(:user), class: "sign-link"%><br />
  </div>
<%end %>
<div class="pagination">
  <%= paginate @posts %>
</div>
