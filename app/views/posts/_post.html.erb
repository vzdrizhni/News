<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= post.date.strftime "%d/%m/%Y"%>
  </p>

  <p>
    <%= image_tag post.image_url if post.image %>
  </p>
</div>
